flow http router {

  http/router {
  
    GET /css/main.css @include(app/css/main.css)
      
    GET / {
    
      ▶ select * from todos order by created_at
      
      // ϟ <<- javascript
        var todos = data.todos;
        if (!todos) return;
        
        for each (var todo in todos) {
          todo.name = todo.name.replace('bob', 'jim');
        }
        
        out.todos = todos;
      ---
      
      jade html.main @include(app/todos.jade)
      then render layout
    }
    
    group {

      POST / {
        ▶ insert into todos (name, done) values (:request.data.todo, false)
      }
      
      PUT /:id {
        coerce/int64 id
        coerce/bool request.data.done
        ▶ update todos set done = :request.data.done where id = :id
      }
        
      DELETE /:id {
        coerce/int64 id
        ▶ delete from todos where id = :id
      }
      
      then redirect to homepage
    
    }
    
  }
}

run render layout {

  jade <<- jade
    !!!
    html
      head
        link(type='text/css', href='/css/main.css', rel='stylesheet')
          
      body
        .container
          h1 Todo!
          != html.main
  ---
}

run redirect to homepage {
  http/redirect /
}

trigger {

  http localhost:5005 {
    run http router
  }
  
}
