name hello

use {
  http
  workflow
}

run start {
  println before we pause
  
  
  
  workflow/pause yay {
    putvars response {
      status 200
      content your token is :token
    }
  }
  println after we pause
}

run continue {

  workflow/resume yay
  
  putvars response {
      status 200
      content did something!
    }
}

trigger {
  http localhost:5001 {
    run start
  }
  http localhost:5002 {
    run continue
  }
}